generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model TwitterUser {
    id                  String  @id @map("_id")
    entities            Json?
    name                String
    profileImageUrl     String
    publicMetrics       Json
    url                 String
    username            String
    verified            Boolean
}

model Tweet {
    id                  String      @id @map("_id")
    attachments         Json?
    authorId            String
    createdAt           DateTime
    entities            Json?
    inReplyToUserId     String?
    publicMetrics       Json
    referencedTweets    Json?
    text                String
    type                String?
}

model TwitterMedia {
    mediaKey            String      @id @map("_id")
    altText             String?
    height              Int
    previewImageUrl     String?
    type                String
    url                 String?
    width               Int
}

